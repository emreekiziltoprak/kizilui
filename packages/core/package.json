{
  "name": "@kizilui/core",
  "version": "1.0.0",
  "description": "Core styles & components",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "esnext": "lib/esnext/index.js",
  "typings": "lib/esm/index.d.ts",
  "style": "lib/css/kizilui.css",
  "files": [
    "lib",
    "scripts",
    "src"
  ],
  "sideEffects": [
    "**/*.css",
    "lib/cjs/components/context-menu/contextMenuSingleton.js",
    "lib/esm/components/context-menu/contextMenuSingleton.js",
    "lib/esnext/components/context-menu/contextMenuSingleton.js"
  ],
  "bin": {
    "upgrade-kizilui-2.0.0-rename": "scripts/upgrade-kizilui-2.0.0-rename.sh",
    "upgrade-kizilui-3.0.0-rename": "scripts/upgrade-kizilui-3.0.0-rename.sh"
  },
  "scripts": {
    "clean": "rm -rf dist/* || rm -rf lib/* || true",
    "compile": "run-p \"compile:*\"",
    "compile:esm": "tsc -p ./src",
    "compile:cjs": "tsc -p ./src -m commonjs --verbatimModuleSyntax false --outDir lib/cjs",
    "compile:esnext": "tsc -p ./src -t esnext --outDir lib/esnext",
    "compile:css": "sass-compile ./src",
    "dev": "run-p \"compile:esm --watch\" \"compile:css --watch\"",
    "dist": "run-s \"dist:*\"",
    "dist:css": "css-dist lib/css",
    "dist:variables": "generate-css-variables",
    "dist:verify": "assert-package-layout",
    "lint": "run-p lint:scss lint:es",
    "lint:scss": "sass-lint",
    "lint:es": "es-lint",
    "lint-fix": "yarn lint:eslint:fix",
    "test": "karma start",
    "verify": "npm-run-all compile -p dist test lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^16.8 || 17 || 18",
    "react-dom": "^16.8 || 17 || 18"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/dom4": "~2.0.2",
    "classnames": "^2.3.2",
    "dom4": "~2.1.6",
    "normalize.css": "^8.0.1",
    "react-lifecycles-compat": "~3.0.4",
    "react-popper": "^2.3.0",
    "react-transition-group": "^4.4.5",
    "resize-observer-polyfill": "~1.5.1",
    "tslib": "~2.6.2"
  },
  "devDependencies": {
    "@kizilui/node-build-scripts": "workspace:^",
    "@storybook/global": "^5.0.0",
    "@storybook/react-vite": "^9.1.3",
    "@types/dom4": "~2.0.2",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/react-transition-group": "^4.4.8",
    "@vitejs/plugin-react": "^4.2.0",
    "enzyme": "^3.11.0",
    "karma": "^6.4.2",
    "mocha": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.77.0",
    "storybook": "^9.1.3",
    "supports-color": "^9.4.0",
    "typescript": "~5.3.3",
    "vite": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:your-org/kizilui.git",
    "directory": "packages/core"
  },
  "keywords": [
    "kizilui",
    "react",
    "ui"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  }
}
